<% if owner_signed_in? && current_owner.guesthouse.id == @room.guesthouse_id %>

  <div>
    <%= link_to "Editar quarto", edit_room_path(@room) %>
    <%= link_to "Personalizar preços", new_custom_price_path %>
    
    <p>Horários personalizados</p>
    <% @room.custom_prices.each do |custom_price| %>
      <p>Período: <%= custom_price.start_date.strftime("%d/%m/%Y") %> - <%= custom_price.end_date.strftime("%d/%m/%Y") %></p>
      <p>Preço: R$ <%= number_with_precision(custom_price.price, precision: 2, separator: ',') %></p>
    <% end %>
  </div>

<% end %>